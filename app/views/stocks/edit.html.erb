<h1>Edit Stock</h1>
<%= form_tag "/stocks/#{@stock.id}", method: :patch do %>
	<div class="form-group">
	<%= label_tag :name %>
	<%= text_field_tag :name, @stock.name, class: "form-control" %>
	</div>
	<div class="form-group">
	<%= label_tag :price %>
	<%= text_field_tag :price, @stock.price, class: "form-control" %>
	</div>
	<%= submit_tag "Edit stock", class: "btn btn-primary" %>
	<% end %>

<hi>Edit Stock</hi>
<%= form_tag '/stock/:id', method: :patch do %>
	<div>
	  Name: <input type="text" name="stock" value="<%= @stock.name %>">	
	</div>
	<div>
	  Price: <input type="integer" name="price" value="<%= @stock.price %>">
	</div>
	<input type="submit" value="Update Stock Listing">
	<% end %>  